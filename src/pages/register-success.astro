---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Registration Successful">
  <main class="container mx-auto px-4 py-8">
    <div class="card bg-base-200 max-w-2xl mx-auto">
      <div class="card-body">
        <h1 class="text-4xl font-bold mb-4">Registration Successful!</h1>
        <p class="mb-4">
          Thank you for registering for the Circuit. We have received your
          registration and payment receipt.
        </p>
        <p class="mb-4">
          We will review your registration and contact you if we need any
          additional information.
        </p>
        <div class="card-actions justify-end">
          <a href="/" class="btn btn-primary">Return to Home</a>
        </div>
      </div>
    </div>
  </main>
</Layout>

