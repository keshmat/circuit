---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Register">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Register for the Circuit</h1>

    <section class="max-w-2xl mx-auto">
      <div class="card bg-base-200">
        <div class="card-body">
          <form class="space-y-6">
            <div class="form-control">
              <label class="label" for="name">
                <span class="label-text">Full Name</span>
                <span class="label-text-alt">Required</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                class="input input-bordered"
                required
              />
            </div>

            <div class="form-control">
              <label class="label" for="federation">
                <span class="label-text">Federation</span>
                <span class="label-text-alt">Optional</span>
              </label>
              <input
                type="text"
                id="federation"
                name="federation"
                class="input input-bordered"
              />
            </div>

            <div class="form-control">
              <label class="label" for="fide-id">
                <span class="label-text">FIDE ID</span>
                <span class="label-text-alt">Optional</span>
              </label>
              <input
                type="text"
                id="fide-id"
                name="fide-id"
                class="input input-bordered"
              />
            </div>

            <div class="form-control">
              <label class="label" for="email">
                <span class="label-text">Email</span>
                <span class="label-text-alt">Required</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="input input-bordered"
                required
              />
            </div>

            <div class="form-control">
              <label class="label" for="phone">
                <span class="label-text">Phone Number</span>
                <span class="label-text-alt">Required</span>
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="input input-bordered"
                required
              />
            </div>

            <div class="form-control">
              <label class="label" for="rating">
                <span class="label-text">Current Rating</span>
                <span class="label-text-alt">Optional</span>
              </label>
              <input
                type="number"
                id="rating"
                name="rating"
                class="input input-bordered"
                min="0"
                max="3000"
              />
            </div>

            <div class="form-control">
              <label class="label cursor-pointer">
                <span class="label-text"
                  >I agree to the tournament rules and regulations</span
                >
                <input
                  type="checkbox"
                  class="checkbox checkbox-primary"
                  required
                />
              </label>
            </div>

            <div class="card-actions justify-end">
              <button type="submit" class="btn btn-primary"
                >Submit Registration</button
              >
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
</Layout>

