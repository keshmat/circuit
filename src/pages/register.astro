---
export const prerender = true;
import Layout from "../layouts/Layout.astro";
---

<Layout title="Register">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">Register for the Circuit</h1>

    <div class="alert alert-info mb-8">
      <div class="flex-1">
        <p>Loading registration information...</p>
      </div>
    </div>

    <section class="max-w-2xl mx-auto mb-8">
      <div class="card bg-base-200 p-0">
        <div class="card-body p-1">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3312.906032904627!2d35.54474881535906!3d33.86632248065693!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x151f17a1d637fd6b%3A0x8c6730200780a798!2sKeshmat%20Chess%20Center!5e0!3m2!1sen!2slb!4v1665562296921!5m2!1sen!2slb"
            width="100%"
            height="450"
            style="border:0;"></iframe>
        </div>
      </div>
    </section>

    <div class="registration-status">
      <section class="max-w-2xl mx-auto">
        <div class="card bg-base-200">
          <div class="card-body">
            <form
              id="registration-form"
              class="space-y-6"
              method="POST"
              enctype="multipart/form-data"
            >
              <input type="hidden" name="form-name" value="registration" />
              <p class="hidden">
                <label>
                  Don't fill this out if you're human:{" "}
                  <input name="bot-field" />
                </label>
              </p>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-control w-full">
                  <label class="label" for="first-name">
                    <span class="label-text">First Name</span>
                    <span class="label-text-alt text-error">*</span>
                  </label>
                  <input
                    type="text"
                    id="first-name"
                    name="first-name"
                    class="input input-bordered w-full"
                    required
                  />
                </div>

                <div class="form-control w-full">
                  <label class="label" for="last-name">
                    <span class="label-text">Last Name</span>
                    <span class="label-text-alt text-error">*</span>
                  </label>
                  <input
                    type="text"
                    id="last-name"
                    name="last-name"
                    class="input input-bordered w-full"
                    required
                  />
                </div>
              </div>

              <div class="form-control w-full">
                <label class="label">
                  <span class="label-text">Do you have a FIDE ID?</span>
                </label>
                <div class="flex gap-4">
                  <label class="label cursor-pointer gap-2">
                    <input
                      type="radio"
                      name="has-fide-id"
                      class="radio radio-primary"
                      value="yes"
                    />
                    <span class="label-text">Yes</span>
                  </label>
                  <label class="label cursor-pointer gap-2">
                    <input
                      type="radio"
                      name="has-fide-id"
                      class="radio radio-primary"
                      value="no"
                      checked
                    />
                    <span class="label-text">No</span>
                  </label>
                </div>
              </div>

              <div id="fide-id-section" class="form-control w-full hidden">
                <label class="label" for="fide-id">
                  <span class="label-text">FIDE ID</span>
                  <span class="label-text-alt text-error">*</span>
                </label>
                <input
                  type="text"
                  id="fide-id"
                  name="fide-id"
                  class="input input-bordered w-full"
                  required
                />
              </div>

              <div id="birthday-section" class="form-control w-full">
                <label class="label" for="birthday">
                  <span class="label-text">Date of Birth</span>
                  <span class="label-text-alt text-error">*</span>
                </label>
                <input
                  type="date"
                  id="birthday"
                  name="birthday"
                  class="input input-bordered w-full"
                  required
                />
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="form-control w-full">
                  <label class="label" for="email">
                    <span class="label-text">Email</span>
                    <span class="label-text-alt text-error">*</span>
                  </label>
                  <input
                    type="email"
                    id="email"
                    name="email"
                    class="input input-bordered w-full"
                    required
                  />
                </div>

                <div class="form-control w-full">
                  <label class="label" for="phone">
                    <span class="label-text">Phone Number</span>
                    <span class="label-text-alt text-error">*</span>
                  </label>
                  <input
                    type="tel"
                    id="phone"
                    name="phone"
                    class="input input-bordered w-full"
                    required
                  />
                </div>
              </div>

              <div class="form-control w-full">
                <label class="label" for="payment-receipt">
                  <span class="label-text">Payment Receipt</span>
                  <span class="label-text-alt text-error">*</span>
                </label>
                <input
                  type="file"
                  id="payment-receipt"
                  name="payment-receipt"
                  class="file-input file-input-bordered w-full"
                  accept="image/*"
                  required
                />
                <div class="mt-2 text-sm text-gray-500">
                  To confirm your registration, pay your fees via OMT Wallet to
                  71/818322 (MARC-ANWAR FARRA) and attach the receipt.
                </div>
              </div>

              <div class="form-control">
                <label for="rules-agreement" class="label cursor-pointer">
                  <span class="label-text">
                    I agree to the tournament rules and regulations
                  </span>
                  <span class="label-text-alt text-error">*</span>
                </label>
                <input
                  type="checkbox"
                  id="rules-agreement"
                  name="rules-agreement"
                  class="checkbox checkbox-primary"
                  required
                />
              </div>

              <div class="card-actions justify-end">
                <button type="submit" class="btn btn-primary">
                  Submit Registration
                </button>
              </div>
            </form>
          </div>
        </div>
      </section>
    </div>
  </main>
</Layout>

<script>
  import { initRegistrationForm } from "../scripts/register";
  initRegistrationForm();
</script>
