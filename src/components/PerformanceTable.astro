---
export const lang = "ts";

import type { PerformanceRating } from "../lib/db";

interface Props {
  records: PerformanceRating[];
}

const { records } = Astro.props;
---

<div class="overflow-x-auto">
  <table class="table table-zebra w-full">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Rating</th>
        <th>Performance</th>
        <th>Games Played</th>
        <th>Tournaments</th>
      </tr>
    </thead>
    <tbody>
      {
        records.map((player, index) => {
          // Use the actual performance value from the database
          const performanceRating = player.performance
            ? parseInt(player.performance)
            : "N/A";

          return (
            <tr>
              <td>{index + 1}</td>
              <td>{player.name}</td>
              <td>{player.rating}</td>
              <td>{performanceRating}</td>
              <td>{player.games_played}</td>
              <td>{player.tournaments}</td>
            </tr>
          );
        })
      }
    </tbody>
  </table>
</div>
